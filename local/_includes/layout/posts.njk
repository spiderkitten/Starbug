---
layout: layout/base.njk
---
<div class="textbox">
<!-- title and date -->
<h3>{{ title }}</h3>
<strong><time>{{ date | readableDate }}</time></strong>
<div>

<!-- TAGS -->
Tags: 

{% for tag in tags %}
<a href="tags/{{tag | slugify}}.html">{{tag}}</a>{%- if not loop.last %}, {% endif %}  
{% endfor %}

</div>

</div><!-- text box -->


<div class="textbox">
<!-- content -->
{{ content | safe }}

</div>

{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div style="text-align: center;">
	{%- if previousPost %} ← <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a> {% endif %} | <a href="/posts.html">All Posts</a> |  {%- if nextPost %} <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a> → {% endif %}
</div>
{%- endif %}
{%- endif %}